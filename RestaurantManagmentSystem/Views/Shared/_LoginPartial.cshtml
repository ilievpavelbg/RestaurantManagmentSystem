@using Microsoft.AspNetCore.Identity
@using RestaurantManagmentSystem.Core.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <form class="form-inline">
                <button  class="nav-link btn btn-link text-dark" disabled>Welcome back <strong>@UserManager.GetUserName(User)</strong></button>
            </form>
        </li>
        <li class="nav-item">
            <form class="form-inline">
                <button  class="nav-link btn btn-link text-dark" disabled>::</button>
            </form>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>
