@using Microsoft.AspNetCore.Identity
@using RestaurantManagmentSystem.Core.Data
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link disabled active" aria-current="page">Welcome <strong>@UserManager.GetUserName(User)</strong></a>
        </li>
        <li class="nav-item">
            <a class="nav-link disabled active" aria-current="page"> | </a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" aria-current="page" asp-controller="User" asp-action="Logout" asp-route-id="@UserManager.GetUserId(User)">Logout</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link active" asp-controller="User" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active" asp-controller="User" asp-action="Login">Login</a>
        </li>
    }
</ul>
