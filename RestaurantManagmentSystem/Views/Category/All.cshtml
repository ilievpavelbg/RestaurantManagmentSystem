@model IEnumerable<EditCategoryViewModel>


@{
    ViewBag.Title = "All Categories";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="row text-center">
    <h3 style="color:red"><strong>@TempData["message"]</strong></h3>
</div>

<div class="col-4">
    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
            </tr>
        </thead>
        <tbody>
            @{
                int count = 1;
            }
            @foreach (var item in Model)
            {
                <tr>
                    <th>@count</th>
                    <td>@item.Name</td>
                    <td align="right">
                        <a class="btn btn-primary" asp-action="Edit" asp-controller="Category" asp-route-Id="@item.Id">Edit</a>
                        <a class="btn btn-danger" onclick="return confirm('This action will delete @item.Name. Are you sure ? ')" asp-action="Delete" asp-controller="Category" asp-route-Id="@item.Id">Delete</a>
                    </td>
                </tr>
                count++;
            }
        </tbody>
    </table>
</div>

