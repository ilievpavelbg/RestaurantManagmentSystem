<div class="container">
    <div class="row">
        <div class="col">
            <h4 style="text-align:center">Active Categories</h4>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count = 1;
                    }
                    @foreach (var category in (IEnumerable<EditCategoryViewModel>)ViewBag.ActiveCategories)
                    {
                            <tr>
                                <th>@count</th>
                                <td>@category.Name</td>
                                <td align="right">
                                    <a class="btn btn-primary" asp-action="Edit" asp-controller="Category" asp-route-Id="@category.Id">Edit</a>
                                    <a class="btn btn-danger" onclick="return confirm('This action will delete @category.Name. Are you sure ? ')" asp-action="Delete" asp-controller="Category" asp-route-Id="@category.Id">Delete</a>
                                </td>
                            </tr>

                        count++;
                    }
                </tbody>
            </table>
        </div>
    </div>

    <div class="row">
        <div class="col">
            <h4 style="text-align:center">Resently Deleted Categories</h4>
            <table class="table table-striped table-bordered">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        int count1 = 1;
                    }
                    @foreach (var category in (IEnumerable<EditCategoryViewModel>)ViewBag.DeletedCategories)
                    {
                            <tr>
                                <th>@count1</th>
                                <td>@category.Name</td>
                                <td align="right">
                                    <a class="btn btn-primary" asp-action="Restore" asp-controller="Category" asp-route-Id="@category.Id">Restore</a>
                                </td>
                            </tr>
                        count1++;
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
