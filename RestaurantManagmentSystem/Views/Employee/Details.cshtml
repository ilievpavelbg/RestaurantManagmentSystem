@model EmployeeDetailsViewModel

@{
    ViewBag.Title = "Details";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<div class="container">
    <div class="row">
        <div class="col-3">
            <img src="~/user-profile.png" class="rounded float-start" alt="...">
        </div>
        <div class="col-4">
            <table class="table">
                <tbody>
                    <tr>
                    <tr class="table-info">
                        <th scope="row">First Name :</th>
                        <td>@Model.FirstName</td>
                    </tr>
                    <tr class="table-info">
                        <th scope="row">Last Name :</th>
                        <td>@Model.LastName</td>
                    </tr>
                    <tr class="table-info">
                        <th scope="row">E-mail :</th>
                        <td>@Model.Email</td>
                    </tr>
                    <tr class="table-info">
                        <th scope="row">Hire date :</th>
                        <td>@Model.HireDate</td>
                    </tr>
                    <tr class="table-info">
                        <th scope="row">Salary :</th>
                        <td>BGN @Model.Salary</td>
                    </tr>
                    <tr class="table-info">
                        <th scope="row">Phone number :</th>
                        <td>@Model.Phone</td>
                    </tr>
                    <tr class="table-info">
                        <th scope="row">Address :</th>
                        <td>@Model.Address</td>
                    </tr>
                    <tr class="table-info">
                        <th scope="row">Town :</th>
                        <td>@Model.Town</td>
                    </tr>
                    <tr class="table-info">
                        <th scope="row">Department :</th>
                        <td>@Model.Department</td>
                    </tr>
                </tbody>
            </table>
            <div class="col-3"><a class="btn btn-primary" asp-action="Edit" asp-controller="Employee" asp-route-Id="@Model.Id">Edit</a></div>
        <div class="col-3"><a class="btn btn-danger" onclick="return confirm('This action will delete @Model.FirstName. Are you sure ? ')" 
        asp-action="Delete" asp-controller="Employee" asp-route-Id="@Model.Id">Delete</a></div>
        </div>
        
    </div>
</div>