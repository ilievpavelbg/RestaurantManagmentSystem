@model IEnumerable<AllEmployeeViewModel>


@{
    ViewBag.Title = "All Employees";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="row text-center">
    <h3 style="color:red"><strong>@TempData["message"]</strong></h3>
</div>

@if (!Model.Any())
{
    <p>There is no employees yet !</p>
}
else
{
    <div class="col-4">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <th>@count</th>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td align="right">
                            <a class="btn btn-primary" asp-action="Details" asp-controller="Employee" asp-route-Id="@item.Id">Details</a>
                            <a class="btn btn-danger" onclick="return confirm('This action will delete @item.FirstName. Are you sure ? ')" asp-action="Delete" asp-controller="Employee" asp-route-Id="@item.Id">Delete</a>
                        </td>
                    </tr>
                    count++;
                }
            </tbody>
        </table>
    </div>
}


