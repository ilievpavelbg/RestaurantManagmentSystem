@model EmployeeDetailsViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-6 offset-md-3">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group text-center mb-3">
                <label asp-for="FirstName" class="control-label"></label>
                <input asp-for="FirstName" type="text" autocomplete="off" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group text-center mb-3">
                <label asp-for="LastName" class="control-label"></label>
                <input asp-for="LastName" type="text" autocomplete="off" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group text-center mb-3">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" type="text" autocomplete="off" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Salary">Salary</label>
                <input class="form-control" type="number" autocomplete="" aria-required="true" asp-for="@Model.Salary" />
                <span asp-validation-for="@Model.Salary" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Phone">Phone Number</label>
                <input class="form-control" type="tel" autocomplete="" aria-required="true" asp-for="@Model.Phone" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Address">Address</label>
                <input class="form-control" type="text" autocomplete="" aria-required="true" asp-for="@Model.Address" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Town">Town</label>
                <input class="form-control" type="text" autocomplete="" aria-required="true" asp-for="@Model.Town" />
                <span asp-validation-for="@Model.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Department" class="form-label">Department</label>
                <input class="form-control" type="text" autocomplete="" aria-required="true" asp-for="@Model.Department" />
                <span asp-validation-for="Department" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Save Changes</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {

    <partial name="_ValidationScriptsPartial" />

}

