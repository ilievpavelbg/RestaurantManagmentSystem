@model EmployeeViewModel

@{
    ViewData["Title"] = "Create";
}

<h1 class="text-center">@ViewData["Title"]</h1>


<div class="row">
    <div class="col-md-4 offset-md-4">
        <form id="registerForm" method="post">
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="text-center mb-3">
                <label asp-for="@Model.FirstName">First Name</label>
                <input class="form-control " autocomplete="" aria-required="true" asp-for="@Model.FirstName" />
                <span asp-validation-for="@Model.FirstName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.LastName">Last Name</label>
                <input class="form-control " autocomplete="" aria-required="true" asp-for="@Model.LastName" />
                <span asp-validation-for="@Model.LastName" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Email">Email</label>
                <input class="form-control " autocomplete="" aria-required="true" asp-for="@Model.Email" />
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
            </div>
            <div class="form-group text-center mb-3">
                <label asp-for="HireDate" class="control-label"></label>
                <input asp-for="HireDate" id="datepicker" type="text" autocomplete="off" class="form-control" id="datepicker"  />
                <span asp-validation-for="HireDate" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Salary">Salary</label>
                <input class="form-control" type="number" autocomplete="" aria-required="true" asp-for="@Model.Salary" />
                <span asp-validation-for="@Model.Salary" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Phone">Phone Number</label>
                <input class="form-control" type="tel" autocomplete="" aria-required="true" asp-for="@Model.Phone" />
                <span asp-validation-for="@Model.Phone" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Address">Address</label>
                <input class="form-control" type="text" autocomplete="" aria-required="true" asp-for="@Model.Address" />
                <span asp-validation-for="@Model.Address" class="text-danger"></span>
            </div>
            <div class="text-center mb-3">
                <label asp-for="@Model.Town">Town</label>
                <input class="form-control" type="text" autocomplete="" aria-required="true" asp-for="@Model.Town" />
                <span asp-validation-for="@Model.Town" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.DepartmentId" class="form-label">Department</label>
                <select asp-for="@Model.DepartmentId" class="form-control" aria-label="Default select example">
                    <option value="@null" selected>Open this menu, or save without Department</option>
                    @foreach (var department in Model.Departments)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
                <span asp-validation-for="Departments" class="text-danger"></span>
            </div>
            <div class="text-center">
                <button id="registerSubmit" type="submit" class="btn btn-primary">Register</button>
            </div>
        </form>
    </div>
</div>



@section Scripts {

    <partial name="_ValidationScriptsPartial" />

    <script>
        $(function() {
            $("#datepicker").datepicker();
        });
    </script>

}

