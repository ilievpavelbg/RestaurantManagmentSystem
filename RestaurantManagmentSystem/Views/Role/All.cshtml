@model IEnumerable<AllRolesViewModel>

@{
    ViewData["Title"] = "All Roles";
}

<h1 class="text-center">@ViewData["Title"]</h1>

<table class="table table-sm table-bordered table-bordered">
    <tr>
        <th>ID</th>
        <th>Name</th>
        <th>Users</th>
        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var role in Model)
    {
        <tr>
            <td>@role.RoleId</td>
            <td>@role.Name</td>
            <td> @(role.UsersInRole.Any() ? @String.Join(",", role.UsersInRole) : "N/A")</td>
            <td><a class="btn btn-sm btn-primary" asp-action="Update" asp-route-id="@role.RoleId">Update</a></td>
            <td>
                <form asp-action="Delete" asp-route-id="@role.RoleId" method="post">
                    <button type="submit" class="btn btn-sm btn-danger">
                        Delete
                    </button>
                </form>
            </td>
        </tr>
    }
</table>