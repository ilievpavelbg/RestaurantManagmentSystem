@model CreateTableViewModel

@{
    ViewData["Title"] = "Create new Table";
}

<h4 class="text-danger" style="text-align:center">
    @TempData["Error"]
</h4>

<div class="row text-center">
    <h3 style="color:red"><strong>@TempData["message"]</strong></h3>
</div>

<h2 class="text-center">@ViewBag.Title</h2>

<div class="row">
    <form method="post" asp-controller="Table" asp-action="Create">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group col-4">
            <label asp-for="@Model.Number" class="control-label">Number</label>
            <input asp-for="@Model.Number" class="form-control" />
            <span asp-validation-for="@Model.Number" class="text-danger"></span>
        </div>
        <div class="form-group col-4">
            <label asp-for="@Model.Capacity" class="control-label">Capacity</label>
            <input asp-for="@Model.Capacity" class="form-control" />
            <span asp-validation-for="@Model.Capacity" class="text-danger"></span>
        </div>
        <div class="col mt-2">
            <input class="btn btn-primary" type="submit" value="Create" />
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
