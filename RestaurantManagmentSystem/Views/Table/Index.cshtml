@model IEnumerable<TableViewModel>


@{
    ViewBag.Title = "All Tables";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />


<div class="row text-center">
    <h3 style="color:red"><strong>@TempData["message"]</strong></h3>
</div>

@if (!Model.Any())
{
    <h2 class="text-center">There is no tables</h2>
}
else
{
    <div class="col-4">
        <table class="table table-striped table-bordered">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Is Reserved</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var table in Model
               .OrderBy(x => x.Id))
                {
                    <tr>
                        <th>@table.Id</th>
                        <td>@table.IsReserved</td>
                        <td align="right">
                            <a class="btn btn-primary" asp-action="Create" asp-controller="Order" asp-route-Id="@table.Id">Create Order</a>
                            <a class="btn btn-danger" onclick="return confirm('This action will delete @table.IsReserved. Are you sure ? ')" asp-action="Delete" asp-controller="Category" asp-route-Id="@table.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}


