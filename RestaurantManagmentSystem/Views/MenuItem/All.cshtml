@model IEnumerable<MenuItemViewModel>

@{
    ViewBag.Title = "All Menu Items";
}


<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<table class="table table-striped table-bordered">
    <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Image</th>
            <th scope="col">Category Name</th>
            <th scope="col">Price</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @{
            int count = 1;
        }
        @foreach (var item in Model
        .Where(x => x.IsDeleted != true)
        .OrderBy(x => x.CategoryName))
        {
                 <tr>
                <th>@count</th>
                <td>@item.Name</td>
                <td>@item.ImageURL</td>
                <td>@item.CategoryName</td>
                <td>@item.Price</td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-controller="MenuItem" asp-route-Id="@item.Id">Edit</a>
                    <a class="btn btn-danger" onclick="return confirm('This action will delete @item.Name. Are you sure ? ')" asp-action="Delete" asp-controller="MenuItem" asp-route-Id="@item.Id">Delete</a>
                    @*<form asp-action="Delete" asp-controller="MenuItem" asp-route-Id="@item.Id">
                        <input class="btn btn-danger" type="submit"  value="Delete" />
                    </form>*@
                </td>
            </tr>

            count++;
        }
    </tbody>
</table>




